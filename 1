import psycopg2

con = psycopg2.connect(dbname='postgres',
                       user='postgres',
                       host='localhost',
                       password='1922')
con.autocommit = True
cur = con.cursor()
user_name = 'anton_user'
cur.execute("CREATE ROLE %s with password '1922' ;" % user_name)
# records = cur.fetchall()
# print(records)
cur.close()
con.close()
